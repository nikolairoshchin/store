<% if notice %>
<p id="notice"><%= notice %>></p>
<% end %>

<h1>Warehouses#index</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @warehouses.each do |warehouse| %>
      <tr>
        <td><%= warehouse.name %></td>
        <td><%= warehouse.address %></td>

        <td><%= link_to "Show", warehouse %></td>
        <td><%= link_to "Edit", edit_warehouse_path(warehouse) %></td>
        <td><%= link_to "Destroy", warehouse, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<%= link_to "New item", new_warehouse_path, class: "btn btn-sm btn-primary" %>