<h1>Products#show</h1>
<div class="container">
<table class="table table-striped">
  <thead>
    <tr>
      <th>SKU</th>
      <th>Part Number</th>
      <th>Name</th>
      <th>Unit</th>
      <th>Price</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @product.sku %></td>
        <td><%= @product.part_number %></td>
        <td><%= @product.name %></td>
        <td><%= @product.unit %></td>
        <td><%= @product.price %></td>

        <td><%= link_to "Edit", edit_product_path(@product) %></td>
        <td><%= link_to "Destroy", @product, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
  </tbody>
</table>
</div>